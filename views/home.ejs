<!DOCTYPE html>
<html lang="en">

<head>
    <%- include('./partials/head')%>
</head>

<body>
    <%- include('./partials/nav')%>
        <% if(!user) {%>
            <h1>You are not logged in</h1>
            <% } else { %>
                <h1>Blogs</h1>
                <section class="flex">
                    <% allBlogs.forEach(blog=> { %>
                        <div class="bg-white rounded-lg shadow-md overflow-hidden hover:shadow-lg transition">
                            <img src="<%= blog.coverImageURL %>" alt="Blog Image" class="w-full h-48 object-cover">
                            <div class="p-4">
                                <h5 class="text-lg font-semibold text-gray-800 mb-2">
                                    <%= blog.title %>
                                </h5>
                                <a href="/blogs/<%= blog._id %>"
                                    class="inline-block mt-2 bg-blue-600 text-white px-4 py-2 rounded-md hover:bg-blue-700">Read More
                                </a>
                            </div>
                        </div>
                        <% }) %>
                </section>
                <% } %>
</body>

</html>